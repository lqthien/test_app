$('#center').html("<%= escape_javascript(render params[:frame]) %>");
$('#center *').each(function(index, value){
  margin = $(value).css("margin-left");
  $(value).css("margin-left", "100%").animate({
      'margin-left': margin
    }, 700
  );
});
$($('.main-menu-item')).css("background", "white").css("color", "#29407C");
$($('.main-menu-item')[<%= Statistic::PANES.index(params[:frame].capitalize) %>]).css("background", "#29407C").css("color", "white");